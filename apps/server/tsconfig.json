{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module & target */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Node types */
    "types": ["node"],

    /* Useful libs */
    "lib": ["ES2020"],

    /* Emit & maps */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Module/interop helpers */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    /* Perf / compatibility */
    "skipLibCheck": true
  },
  "include": ["src"]
}

